<div id="<%= dom_id post %>" class="post-container">
  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= post.keyword %>
  </p>

   <p>
    <%= post.user%>
   </p>

   <p>
      <%= link_to "Show this post", post, class:"post-link" %>
    </p>
     <% post.images.each do |image| %>
    <%= image_tag(image, style: "
      max-width: 50%;
    height: auto; object-fit: contain;") %>
      <% end %>
</div>
